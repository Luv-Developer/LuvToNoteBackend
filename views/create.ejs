<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LuvToNote - Create Note</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Quicksand:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel = "stylesheet" type = "text/css" href = "/stylesheets/create.css">
    <link rel = "icon" type = "image/icon" href = "/images/notes.png">
</head>
<body>
    <!-- Animated Background -->
    <div class="background-animation">
        <div class="floating-element element-1"></div>
        <div class="floating-element element-2"></div>
        <div class="floating-element element-3"></div>
    </div>

    <!-- Animated Pens -->
    <div class="floating-pens">
        <div class="pen"><i class="fas fa-pen"></i></div>
        <div class="pen"><i class="fas fa-pencil-alt"></i></div>
        <div class="pen"><i class="fas fa-highlighter"></i></div>
        <div class="pen"><i class="fas fa-marker"></i></div>
    </div>

    <!-- Navigation -->
    <nav class="navbar">
        <a href="/" class="logo">
            <i class="fas fa-sticky-note"></i>
            LuvTo<span>Note</span>
        </a>
        <div class="nav-buttons">
            <a href = "/">
            <button class="nav-btn btn-home" id="homeBtn">
                <i class="fas fa-home"></i>
                Home
            </button>
            </a>
            <a href = "/allnotes">
            <button class="nav-btn btn-notes" id="allNotesBtn">
                <i class="fas fa-book"></i>
                All Notes
            </button>
            </a>
            <a href = "/profile">
            <button class="nav-btn btn-profile" id="profileBtn">
                <i class="fas fa-user-circle"></i>
                Your Profile
            </button>
            </a>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container">
        <!-- Page Header -->
        <div class="page-header">
            <h1 class="page-title">Create New Note</h1>
            <p class="page-subtitle">Capture your thoughts, ideas, and important information in your digital notebook</p>
        </div>

        <!-- Create Note Section -->
        <div class="create-note-container">
            <!-- Form Section -->
            <div class="form-section">
                <div class="form-card">
                    <div class="form-header">
                        <div class="form-icon">
                            <i class="fas fa-edit"></i>
                        </div>
                        <h2 class="form-title">Note Details</h2>
                    </div>

                    <form action = "/create" method = "post" id="noteForm">
                        <div class="form-group">
                            <label class="form-label" for="noteTitle">
                                <i class="fas fa-heading"></i>
                                Note Title
                            </label>
                            <div class="input-with-icon">
                                <i class="fas fa-pen input-icon"></i>
                                <input name = "title" type="text" id="noteTitle" class="form-input" 
                                       placeholder="Enter a descriptive title for your note" 
                                       maxlength="100" required>
                            </div>
                            <div class="character-count" style="text-align: right; margin-top: 5px;">
                                <span id="titleCount">0</span>/100
                            </div>
                        </div>

                        <!-- Note Category -->
                        <div class="form-group">
                            <label class="form-label" for="noteCategory">
                                <i class="fas fa-tag"></i>
                                Category
                            </label>
                        </div>

                        <div class="form-group">
                            <label class="form-label" for="noteContent">
                                <i class="fas fa-align-left"></i>
                                Note Content
                            </label>
                            <div class="textarea-container">
                                <div class="input-with-icon">
                                    <i class="fas fa-sticky-note input-icon"></i>
                                    <textarea name = "note" id="noteContent" class="form-input" 
                                              placeholder="Start typing your note here... 
You can format your text with markdown:
- Use * for emphasis
- Use # for headings
- Use - for bullet points
- Add links with [text](url)" 
                                              rows="10" required></textarea>
                                </div>
                                <div class="character-count">
                                    <span id="contentCount">0</span>/5000 characters
                                </div>
                            </div>
                        </div>

                        <!-- Save Button -->
                        <div class="save-button-container">
                            <button type="submit" class="save-button" id="saveBtn">
                                <i class="fas fa-save"></i>
                                Save Note
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Preview Section -->
            <div class="preview-section">
                <div class="preview-card">
                    <div class="preview-header">
                        <div class="preview-icon">
                            <i class="fas fa-eye"></i>
                        </div>
                        <h2 class="preview-title">Live Preview</h2>
                    </div>

                    <div class="note-preview">
                        <div class="preview-placeholder" id="previewPlaceholder">
                            <i class="fas fa-file-alt"></i>
                            <h3>Your Note Preview</h3>
                            <p>Start typing to see a live preview of your note here.</p>
                        </div>

                        <div class="note-preview-content" id="notePreview">
                            <div class="note-preview-header">
                                <h3 class="note-preview-title" id="previewTitle">Note Title</h3>
                                <div class="note-preview-meta">
                                    <span class="note-preview-category" id="previewCategory">Category</span>
                                    <span class="note-preview-date">
                                        <i class="far fa-calendar"></i>
                                        <span id="previewDate">Today</span>
                                    </span>
                                </div>
                            </div>
                            <div class="note-preview-body" id="previewContent">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Recent Notes -->
        <div style="visibility: hidden;" class="recent-notes">
        <h2 class="section-title">
            </h2>
            <div class="notes-grid" id="recentNotes">
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer">
        <p>Â© 2026 LuvToNote. All rights reserved. | Capture ideas, organize thoughts, boost productivity</p>
    </footer>
    <script src = "/javascripts/create.js"></script>
</body>
</html>