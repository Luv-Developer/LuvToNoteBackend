<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LuvToNote - All Notes</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Quicksand:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel = "stylesheet" type = "text/css" href = "/stylesheets/allnotes.css">
    <link rel = "icon" type = "image/icon" href = "/images/notes.png">
</head>
<body>
    <!-- Animated Background -->
    <div class="background-animation">
        <div class="floating-element"></div>
        <div class="floating-element"></div>
        <div class="floating-element"></div>
    </div>

    <!-- Animated Notes Background -->
    <div class="floating-notes-bg">
        <div class="floating-note-bg"></div>
        <div class="floating-note-bg"></div>
        <div class="floating-note-bg"></div>
        <div class="floating-note-bg"></div>
    </div>

    <!-- Navigation -->
    <nav class="navbar">
        <a href="#" class="logo">
            <i class="fas fa-sticky-note"></i>
            LuvTo<span>Note</span>
        </a>
        <div class="nav-buttons">
            <a href = "/create">
            <button class="nav-btn btn-create" id="createNoteBtn">
                <i class="fas fa-plus-circle"></i>
                Create Notes
            </button>
            </a>
            <a href = "/profile">
            <button class="nav-btn btn-profile" id="profileBtn">
                <i class="fas fa-user-circle"></i>
                Your Profile
            </button>
            </a>
            <a href = "/signout">
            <button class="nav-btn btn-signout" id="signoutBtn">
                <i class="fas fa-sign-out-alt"></i>
                Sign Out
            </button>
            </a>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container">
        <!-- Page Header -->
        <div class="page-header">
            <h1 class="page-title">All Your Notes</h1>
            <p class="page-subtitle">Browse through all your saved notes. Each thought, idea, and memory captured beautifully in your digital notebook.</p>
            <div class="notes-counter" id="notesCounter">
                <i class="fas fa-sticky-note"></i> 
                <span id="notesCount"><%= total  %></span> Notes
            </div>
        </div>

        <div class="notes-grid-container" id="notesGridContainer">
            <% notes.reverse().forEach((note)=>{  %>
                <!-- Note Container 1 -->
            <div class="note-container" data-note-id="<%= note.id %>" style="animation-delay: 0.1s">
                <div class="note-header">
                    <h3 class="note-title"><%=  note.title  %></h3>
                    <div class="note-category work">Work</div>
                </div>
                <div class="note-content">
                    <p><%=  note.note  %></p>
                </div>
                <div class="note-footer">
                    <div class="note-date">
                        <i class="far fa-calendar"></i>
                        <%=  note.date   %>
                    </div>
                    <div class="note-actions">
                        <a href="/edit/<%= encodeURIComponent(note.title) %>">
                        <button class="action-btn edit-btn" data-note-id="<%= note.id %>">
                            <i class="fas fa-edit"></i>
                        </button>
                        </a>
                    </div>
                </div>
            </div>
          <%  }) %>
    </div>

    <!-- Delete Confirmation Modal -->
    <div class="modal-overlay" id="deleteModal">
        <div class="modal-content">
            <button class="modal-close" id="closeDeleteModal">&times;</button>
            <div class="modal-header">
                <div class="modal-icon delete">
                    <i class="fas fa-trash-alt"></i>
                </div>
                <h2 class="modal-title">Delete Note</h2>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this note? This action cannot be undone.</p>
                <p><strong id="deleteNoteTitle">Note Title</strong></p>
            </div>
            <div class="modal-actions">
                <button class="modal-btn cancel" id="cancelDelete">Cancel</button>
                <button class="modal-btn confirm" id="confirmDelete">Delete Note</button>
            </div>
        </div>
    </div>

    <!-- Edit Note Modal -->
    <div class="modal-overlay" id="editModal">
        <div class="modal-content">
            <button class="modal-close" id="closeEditModal">&times;</button>
            <div class="modal-header">
                <div class="modal-icon edit">
                    <i class="fas fa-edit"></i>
                </div>
                <h2 class="modal-title">Edit Note</h2>
            </div>
            <form class="edit-form" id="editForm">
                <div class="form-group">
                    <label class="form-label" for="editNoteTitle">Note Title</label>
                    <input type="text" id="editNoteTitle" class="form-input" required>
                </div>
                
                <div class="form-group">
                    <label class="form-label">Category</label>
                    <div class="category-select">
                        <div class="category-option" data-category="work">Work</div>
                        <div class="category-option" data-category="personal">Personal</div>
                        <div class="category-option" data-category="study">Study</div>
                        <div class="category-option" data-category="ideas">Ideas</div>
                    </div>
                </div>
                
                <div class="form-group">
                    <label class="form-label" for="editNoteContent">Note Content</label>
                    <textarea id="editNoteContent" class="form-input" required></textarea>
                </div>
                
                <div class="modal-actions">
                    <button type="button" class="modal-btn cancel" id="cancelEdit">Cancel</button>
                    <button type="submit" class="modal-btn save">Save Changes</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer">
        <p>Â© 2026 LuvToNote. All rights reserved. | Capture ideas, organize thoughts, boost productivity</p>
    </footer>
    <script src = "/javascripts/allnotes.js"></script>
</body>
</html>